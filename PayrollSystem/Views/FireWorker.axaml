<UserControl    x:Class="PayrollSystem.Views.FireWorkers"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="using:PayrollSystem.ViewModels"    d:DesignHeight="450"    d:DesignWidth="800"    mc:Ignorable="d">    <Grid>        <WrapPanel            Grid.RowSpan="2"            Width="363"            Height="150"            HorizontalAlignment="Left"            VerticalAlignment="Bottom"            Background="#FF90B2B5"            Orientation="Vertical">            <Label                Width="363"                Background="#FF476F8E"                Content="Удаление сотрудника по имени"                FontFamily="Copperplate Gothic Bold"                FontSize="14" />            <TextBox                Name="FireNameWorker"                Width="200"                Height="25"                Margin="0,10,0,0"                HorizontalAlignment="Center"                Text="{Binding WorkerName}"                TextWrapping="Wrap"                Watermark="Имя" />            <StackPanel Margin="0,10,0,0" Orientation="Vertical" Spacing="5">                <Button                    Width="270"                    Height="30"                    HorizontalAlignment="Center"                    Command="{Binding FireComissionWorker}"                    Content="Уволить комиссионого сотрудника" />                <Button                    Width="270"                    Height="30"                    HorizontalAlignment="Center"                    Command="{Binding FireHourlyWorker}"                    Content="Уволить почасового сотрудника" />            </StackPanel>        </WrapPanel>    </Grid>    <Design.DataContext>        <vm:FireWorkerViewModel />    </Design.DataContext></UserControl>