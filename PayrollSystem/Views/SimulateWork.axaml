<UserControl    x:Class="PayrollSystem.Views.SimulateWork"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:viewModels="clr-namespace:PayrollSystem.ViewModels"    d:DesignHeight="450"    d:DesignWidth="800"    mc:Ignorable="d">    <Grid>        <WrapPanel            Grid.RowSpan="2"            Width="363"            Height="244"            HorizontalAlignment="Right"            VerticalAlignment="Top"            Background="#FF90B2B5"            Orientation="Vertical">            <Button                VerticalAlignment="Top"                Command="{Binding SimulateWork}"                Content="Симуляция работы" />            <TextBox Text="{Binding Days}" Watermark="Дни" />            <StackPanel Orientation="Horizontal">                <Label Content="Расходы" />                <Label Content="Отработанные дни" />            </StackPanel>            <StackPanel Orientation="Vertical">                <TextBlock Text="{Binding Expenses, Mode=TwoWay}" />                <TextBlock Text="{Binding WorkedDaysCount, Mode=TwoWay}" />            </StackPanel>        </WrapPanel>    </Grid>    <Design.DataContext>        <viewModels:SimulateWorkViewModel />    </Design.DataContext></UserControl>