<UserControl    x:Class="PayrollSystem.Views.OutputWorkers"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:viewModels="clr-namespace:PayrollSystem.ViewModels"    d:DesignHeight="450"    d:DesignWidth="800"    mc:Ignorable="d">    <Grid>        <WrapPanel            Grid.RowSpan="2"            Width="363"            Height="285"            Orientation="Vertical">            <DataGrid Name="AllWorkers" AutoGenerateColumns="False">                <DataGrid.Columns>                    <DataGridTextColumn                        Width="487"                        Binding="{Binding Name}"                        Header="Имя" />                </DataGrid.Columns>            </DataGrid>        </WrapPanel>    </Grid>    <Design.DataContext>        <viewModels:OutputWorkerViewModel />    </Design.DataContext></UserControl>