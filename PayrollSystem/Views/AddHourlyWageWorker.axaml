<UserControl    x:Class="PayrollSystem.Views.AddHourlyWageWorker"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="using:PayrollSystem.ViewModels"    d:DesignHeight="450"    d:DesignWidth="800"    mc:Ignorable="d">    <Grid>        <WrapPanel            Grid.RowSpan="2"            Width="363"            Height="285"            HorizontalAlignment="Left"            VerticalAlignment="Top"            Background="#FF90B2B5"            Orientation="Vertical">            <Label                Width="363"                Background="#FF476F8E"                Content="Добавление сотрудника с почасовой оплатой"                FontFamily="Copperplate Gothic Bold"                FontSize="14" />            <TextBox                Width="174"                Height="23"                Margin="0,10,0,0"                HorizontalAlignment="Center"                Text="{Binding HourlyName}"                Watermark="Имя" />            <TextBox                Width="174"                Height="23"                Margin="0,10,0,0"                HorizontalAlignment="Center"                Text="{Binding HourlyGender}"                Watermark="Male or Female" />            <TextBox                Width="174"                Height="23"                Margin="0,10,0,0"                RenderTransformOrigin="1.35,0.559"                Text="{Binding NormalHourlySalary}"                Watermark="Зарплата" />            <TextBox                Width="174"                Height="23"                Margin="0,10,0,0"                RenderTransformOrigin="1.35,0.559"                Text="{Binding OvertimeHourlySalary}"                Watermark="Зарплата за переработку" />            <TextBox                Width="174"                Height="23"                Margin="0,10,0,0"                Text="{Binding StandartOfHourlyWorkingHours}"                Watermark="Норма часов" />            <StackPanel Orientation="Horizontal">                <Button                    Width="200"                    Height="30"                    Margin="0,10,0,0"                    HorizontalAlignment="Center"                    ClickMode="Press"                    Command="{Binding AddHourlyWorker}"                    Content="Добавить работника" />                <Button Margin="0,10,0,0" Command="{Binding AddHourlyWorkers}">Обновить таблицу</Button>            </StackPanel>            <Button                Width="200"                Height="30"                Margin="0,10,0,0"                HorizontalAlignment="Center"                ClickMode="Press"                Command="{Binding AddHourlyWorker}"                Content="Добавить работника" />        </WrapPanel>    </Grid>    <Design.DataContext>        <vm:AddHourlyWageWorkerViewModel />    </Design.DataContext></UserControl>